<h1>List of All Posts</h1>

<% @posts.each do |p| %>
    <div>
        <br><%= link_to(p.user.email, "/profile/#{p.user_id}") %></br>
    <% if p.picture.attached? %>
    	<%= image_tag p.picture, height: 200 %>
    <% end %>
        <li><%=link_to p.caption, "posts/#{p.id}" %></li>
    </div>    
<% end %>
